<div class="subject list">
    <h2>Subjects</h2>
	<table class="listing" summary="Subject list">
	<tr class="header">
	  <th>&nbsp;</th>
	  <th>Subject</th>
	  <th>Visible</th>
	  <th>Pages</th>
	  <th>Actions</th>
	</tr>
	<% @subjects.each do |subject| %>
	<tr>
	  <td><%= subject.position %></td>
	  <td><%= subject.name %></td>
	  <td><%= subject.visible ? 'Yes' : 'No' %></td>
	  <td><%= subject.pages.size %></td>
	  <td class="actions">
	      <%=link_to("Show",{:action => 'show',:id =>subject.id}) %>
	      <%=link_to("Edit",'#')  %>
	      <%=link_to("Delete",'#')  %>
	  </td> 
	</tr>
	<% end %>
	</table>
	</div>
	
      
